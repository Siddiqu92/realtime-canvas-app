{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["esnext"],
    "types": ["node"],

    /* Output Options */
    "sourceMap": true,

    /* Module Resolution */
    "esModuleInterop": true,
    "moduleResolution": "node",

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
